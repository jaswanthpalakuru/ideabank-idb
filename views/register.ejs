<%- include("partials/header") -%>

<div class="container div1">
  <center>
  <h1 style="margin-top: 30px">Idea Hub</h1>
  </center>
  <center>
    <h3>Register</h3>
    <small class="form-text text-muted">(All fields are mandatory and must be UNIQUE)</small>
    <small class="form-text text-muted">We'll never share your deails with anyone else.</small>
    </center>
    <hr>
    <!-- <center> -->
  <form class="" style="margin-top: 50px" action="/register" method="post">
  <div class="form-group row">
    <div class="col-sm-5">
      <label  class="col-form-label" style="float: right">Name <span class="star">*</span> :</label>
    </div>
    <!-- <label  class="col-sm-1 col-form-label"> : </label> -->
    <div class="col-sm-4">
      <input type="text" class="form-control" name="name" placeholder="Name">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-5">
      <label  class="col-form-label" style="float: right">Email <span class="star">*</span> :</label>
    </div>
    <!-- <label  class="col-sm-1 col-form-label"> : </label> -->
    <div class="col-sm-4">
      <input type="email" class="form-control col-xs-2" name="email" placeholder="email@email.com">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-5">
      <label  class="col-form-label" style="float: right">Password <span class="star">*</span> :</label>
    </div>
    <!-- <label  class="col-sm-1 col-form-label"> : </label> -->
    <div class="col-sm-4">
      <input type="password" class="form-control col-xs-2" name="password" placeholder="*****">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-5">
      <label  class="col-form-label" style="float: right">Mobile Number <span class="star">*</span> :</label>
    </div>
    <!-- <label  class="col-sm-1 col-form-label"> : </label> -->
    <div class="col-sm-4">
      <input type="text" class="form-control" name="mobileNumber" placeholder="9***00***9">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12"><center>
      <input class="form-check-input" style="float: right" type="checkbox" id="gridCheck1">
      <label>
           i agree to the terms and conditions
      </label>
      </center>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <center>
      <button type="submit" class="btn btn-primary">Sign in</button>
      </center>
    </div>
  </div>
</form>
<!-- </center> -->
</div>
<div class="container row">
<div class="col-sm-12">
  <form class="" action="/home" method="post">
    <button type="submit" style="float: right; margin-top: -45px;" class="btn btn-primary" name="button">Back</button>
  </form>
</div>
</div>

<%- include("partials/footer") -%>
